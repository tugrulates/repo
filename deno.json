{
  "workspace": [
    "./roka/core/*",
    "./roka/tool/*",
    "./duolingo",
    "./lonely-planet",
    "./photo"
  ],
  "tasks": {
    "test": "deno test -P",
    "coverage": "deno task test --coverage && deno coverage --html",
    "lint": "deno fmt -q --check && deno lint -q && deno check -q **/*.ts",
    "docs": "deno doc --lint --html $(find . -path '**/*.ts' -type f)",
    "ok": "deno task lint && deno task docs && deno task test && deno publish --quiet --dry-run --allow-dirty"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "no-await-in-loop",
        "no-console",
        "no-eval",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-useless-rename",
        "single-var-declarator"
      ]
    }
  },
  "imports": {
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@^0.1.56",
    "@cliffy/ansi/colors": "jsr:@cliffy/ansi@1.0.0-rc.8/colors",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@cliffy/flags": "jsr:@cliffy/flags@1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.8",
    "@david/which": "jsr:@david/which@^0.4.1",
    "@octokit/openapi-types": "npm:@octokit/openapi-types@^26.0.0",
    "@octokit/rest": "npm:@octokit/rest@^22.0.0",
    "@sigma/deno-compile-extra": "jsr:@sigma/deno-compile-extra@^0.12.1",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/async": "jsr:@std/async@^1.0.14",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/html": "jsr:@std/html@^1.0.4",
    "@std/http": "jsr:@std/http@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/semver": "jsr:@std/semver@^1.0.5",
    "@std/streams": "jsr:@std/streams@^1.0.13",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/text": "jsr:@std/text@^1.0.16",
    "exiftool-vendored": "npm:exiftool-vendored@^30.5.0",
    "exiftool-vendored.exe": "npm:exiftool-vendored.exe@^13.36.0",
    "exiftool-vendored.pl": "npm:exiftool-vendored.pl@^13.36.0"
  },
  "unstable": ["kv"]
}
